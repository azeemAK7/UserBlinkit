<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Yellow"
    tools:context="Auth.SplashFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            
            <TextView
                android:id="@+id/tvHead"
                android:layout_width="wrap_content"
                android:layout_height="91.00dp"
                android:text="blink"
                android:textColor="#000000"
                android:textSize="78.00dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvSubHead"
                android:layout_width="wrap_content"
                android:layout_height="91.00dp"
                android:text="it"
                android:textColor="@color/Green"
                android:textSize="78.00dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="India's Last Minute App"
            android:textSize="19.50dp"
            android:textColor="#000000"/>
        <View
            android:layout_width="230.00dp"
            android:layout_height="2.60dp"
            android:layout_weight="3"
            android:background="#787777"
            android:layout_marginTop="26.00dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.1"
            android:layout_marginTop="26.00dp"
            android:text="A ZOMATO COMPANY"
            android:textColor="#000000"
            android:textSize="10.00dp"
            android:textStyle="bold"/>
    </LinearLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>